<body>
    <div class="container">
        <div class="login">
            <div class="content">
                <div class="log-on border_insc">
                    <div class="logo">
                        <img src="../LayoutTrangChu/img/foodgo9.png" alt="FoodG09 logo">
                    </div>
                   @*  <form> *@
                    @using(Html.BeginForm("LogIn", "Access", FormMethod.Post))
                    {
                        <div>
                            @Html.TextBoxFor(x => x.Email, new { placeholder = "Email", required = "required", autofocus = "autofocus" })
                        </div>
                        <div>
                            @Html.TextBoxFor(x => x.MatKhau, new {type = "password", placeholder = "Password" })
                        </div>
                        <div>
                            <button class="log_btn" type="submit">
                                Log in
                            </button>
                        </div>
                    }
                    @* </form> *@
                  
                </div>
                <div class="sing-up border_insc">
                    <p>
                        Don't have an account?
                        <a asp-controller="Access" asp-action="SignUp">Sign up</a>
                    </p>
                </div>
                <div class="download">
                    <p>Get the app.</p>
                    <div>
                        <img src="../LayoutTrangChu/img/google_play_icon.png" alt="download app from google play">
                        <img src="../LayoutTrangChu/img/microsoft-icon.png" alt="download app from microsoft">
                    </div>
                </div>
            </div>
        </div>
    </div>
