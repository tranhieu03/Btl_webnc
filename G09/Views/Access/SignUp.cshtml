@{
    Layout = null;
}
@model NguoiDung

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instagram</title>
    <link rel="stylesheet" href="../LayoutTrangChu/sass/vender/bootstrap.css">
    <link rel="stylesheet" href="../LayoutTrangChu/sass/vender/bootstrap.min.css">
    <link rel="stylesheet" href="../LayoutTrangChu/sass/main.css">

    <style>
        /* Styling for the page */
        body {
            background-color: #fafafa;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            font-family: Arial, sans-serif;
        }

        /* Centering the sign-up box */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            margin-top: 50px;
        }

        /* Sign-up box styling */
        .sign_up {
            background: #ffffff;
            padding: 30px 40px;
            border: 1px solid #dbdbdb;
            border-radius: 8px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .content {
            text-align: center;
        }

            .content p {
                font-size: 1rem;
                color: #8e8e8e;
                margin-bottom: 20px;
            }

        /* Input and button styling */
        .form-control {
            margin: 10px 0;
            padding: 12px;
            border-radius: 5px;
            border: 1px solid #dbdbdb;
            font-size: 1rem;
        }

        .log_btn {
            width: 100%;
            padding: 12px;
            background-color: #3897f0;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

            .log_btn:hover {
                background-color: #2b85e4;
            }

        /* Sign-in link styling */
        .sing-in {
            margin-top: 20px;
            font-size: 0.9rem;
            color: #8e8e8e;
            text-align: center;
        }

            .sing-in a {
                color: #3897f0;
                text-decoration: none;
                font-weight: bold;
            }

                .sing-in a:hover {
                    text-decoration: underline;
                }

        /* Download app section */
        .download {
            text-align: center;
            margin-top: 20px;
            font-size: 0.85rem;
            color: #8e8e8e;
        }

            .download p {
                margin-bottom: 10px;
            }

            .download img {
                width: 120px;
                margin: 5px;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="sign_up">
            <div class="content">
                <h2 style="font-size: 1.5em; font-weight: bold; color: #333; margin-bottom: 10px;">Sign up to Instagram</h2>
                <p>Sign up to see photos and videos from your friends.</p>

                <form asp-action="SignUp" method="post">
                    <div class="form-group">
                        <input asp-for="TenNguoiDung" class="form-control" placeholder="Username" />
                        <span asp-validation-for="TenNguoiDung" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="MatKhau" type="password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                    <button type="submit" class="log_btn">Sign Up</button>
                </form>
            </div>

            <div class="sing-in border_insc">
                <p>
                    Have an account?
                    <a asp-controller="Access" asp-action="LogIn">Log in</a>
                </p>
            </div>

            <div class="download">
                <p>Get the app.</p>
                <div>
                    <img src="../LayoutTrangChu/img/google_play_icon.png" alt="Download from Google Play">
                    <img src="../LayoutTrangChu/img/microsoft-icon.png" alt="Download from Microsoft Store">
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js" integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ" crossorigin="anonymous"></script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
